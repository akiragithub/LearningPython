<AddClassDialog@MyCustomDialog>
    size_hint : 0.65, 0.77
    pos_hint : {'center_x':0.5, 'center_y':0.5}
    title: 'Ajouter'
    name_dd: name_dd
    p_teacher_dd: p_teacher_dd
    number_of_students_tf: number_of_students_tf
    majors_dd: majors_dd
    topics_gl: topics_gl
    BoxLayout:
        orientation: 'vertical'
        size: 1, 1
        MDCard:
            id: my_dialog_mdcard
            GridLayout:
                cols: 2
                size_hint: 1, 0.95
                pos_hint: {'center_x':0.5, 'center_y':0.5}
                spacing: dp(5)
                padding: dp(10)
                MDDropDownItem:
                    id: name_dd
                    items: ["Denomination"] + app.px_model.classrooms
                    size_hint_x: 0.4
                MDDropDownItem:
                    id: p_teacher_dd
                    items: ["Professeur principal"] + app.px_model.teachers
                    size_hint_x: 0.4
                MDTextField:
                    id: number_of_students_tf
                    hint_text: "Nombre d'eleves"
                    size_hint_x: 0.4
                MDDropDownItem:
                    id: majors_dd
                    items: ["Ajouter une matiere"] + app.px_model.topics_names
                    size_hint_x: 0.4
                    on_select: root.on_major_selected()
        MDCard:
            id: majors_card
            size_hint : 1, 1.75
            GridLayout:
                id: topics_gl
                cols: 3
                spacing : dp(10)
                padding : dp(10)

        MDCard:
            size_hint: 1, 0.25
            GridLayout:
                cols: 2
                MDFlatButton:
                    id: cancel_btn
                    text: "Annuler"
                    font_style: 'btn'
                    size_hint_x: 0.4
                    on_release: root.dismiss()
                MDFlatButton:
                    id: save_reports_btn
                    text: "Ok"
                    font_style: 'btn'
                    size_hint_x: 0.4
                    on_release: root.save_class()


