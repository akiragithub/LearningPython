# kv file for my dialogs


<AddTeacherDialog@Popup>
    size_hint : 0.8, 0.6
    pos_hint : {'center_x':0.5, 'center_y':0.5}
    title: 'Ajouter'
    my_dialog_mdcard: my_dialog_mdcard
    name_tf: name_tf
    surname_tf: surname_tf
    mle_tf: mle_tf
    classes_dd: classes_dd
    date_tf: date_tf
    subjects_dd: subjects_dd
    diploma_dd: diploma_dd
    majors_card: majors_card
    classrooms_gl: classrooms_gl

    MDCard:
        id: my_dialog_mdcard
        GridLayout:
            cols: 2
            size_hint: 1, 1
            pos_hint: {'center_x':0.5, 'center_y':0.5}
            spacing: dp(10)
            padding: dp(10)
            MDTextField:
                id: name_tf
                hint_text: "Nom "
                size_hint_x: 0.4
            MDTextField:
                id: surname_tf
                hint_text: "Prenoms "
                size_hint_x: 0.4
            MDTextField:
                id: mle_tf
                hint_text: "Matricule "
                size_hint_x: 0.4
            MDDropDownItem:
                id: classes_dd
                items: app.px_model.classrooms
                size_hint_x: 0.4
                on_select: root.on_classroom_selected()
            MDDropDownItem:
                id: subjects_dd
                items : ["Matiere enseignee"] + app.px_model.topics_names
                size_hint_x: 0.4
            MDDropDownItem:
                id: diploma_dd
                size_hint_x: 0.4
                items: ["Diplome", "Licence", "Maitrise", "Master", "Doctorat", "BAPES", "CAPES", "Autre"]
                dropdown_bg: [0.13, 0.59, 0.95, 0.5]
            MDLabel:
                id: hack_lb
                text : "Date d'entree au PMB"
                size_hint_x: 0.4
            MDTextField:
                id: date_tf
                hint_text: "aaaa/mm/jj"
                size_hint_x: 0.4
        MDCard:
            id: majors_card
            size_hint : 0.5, 1
            GridLayout:
                id: classrooms_gl
                cols: 2
#                pos_hint: {'center_x':0.5, 'center_y':0.5}
                spacing : dp(10)
                padding: dp(10)

            MDFlatButton:
                id: cancel_btn
                text: "Annuler"
                on_release: root.dismiss()
            MDFlatButton:
                id: save_reports_btn
                text: "Ok"
                on_release: root.save_teacher()

